<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.android.graduationdemo.controller.DetailedActivity">
<LinearLayout
    android:id="@+id/activity_detailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/allergies"
        android:id="@+id/image_aid"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signs:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Signs:-"
        android:id="@+id/sign_aid"
        android:padding="8dp"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aid:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Signs:-"
        android:id="@+id/cure_aid"
        android:padding="8dp"
        android:textSize="15sp"/>
</LinearLayout>
</ScrollView>
