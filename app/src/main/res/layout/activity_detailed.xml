<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.android.graduationdemo.firstaid.DetailedActivity">
<LinearLayout
    android:id="@+id/activity_detailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/allergies"
        android:id="@+id/image_aid"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signs:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="20sp"/>



        <com.ms.square.android.expandabletextview.ExpandableTextView
            android:layout_width="match_parent"
            android:id="@+id/expandable_text_view"
            app:maxCollapsedLines="4"
            app:animDuration="200"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Signs:-"
            android:id="@+id/expandable_text"
            android:padding="8dp"
            android:textSize="15sp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expand_collapse"
                android:layout_gravity="bottom|right"
                android:background="@android:color/transparent"
                android:padding="16dp"
                />
        </com.ms.square.android.expandabletextview.ExpandableTextView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aid:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:padding="8dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Signs:-"
        android:id="@+id/cure_aid"
        android:padding="8dp"
        android:textSize="15sp"/>
</LinearLayout>
</ScrollView>
